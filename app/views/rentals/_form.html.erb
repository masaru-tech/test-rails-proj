<%= form_for(rental) do |f| %>
  <% if rental.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rental.errors.count, "error") %> prohibited this rental from being saved:</h2>

      <ul>
      <% rental.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
    <span><%= t('number.currency.format.unit') %></span>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
    <span><%= t('datetime.prompts.year') %></span>
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <hr>

  <%= f.fields_for :stations do |station| %>
    <h2><%= "#{Station.model_name.human}#{station.index+1}" %></h2>


    <div class="field">
      <%= station.label :route_name %>
      <%= station.text_field :route_name %>
    </div>

    <div class="field">
      <%= station.label :name %>
      <%= station.text_field :name %>
    </div>

    <div class="field">
      <%= station.label :walk_time %>
      <%= station.number_field :walk_time %>
      <%= t('datetime.prompts.minute') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
