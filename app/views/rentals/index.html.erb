<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Rental.human_attribute_name(:name) %></th>
      <th><%= Rental.human_attribute_name(:price) %></th>
      <th><%= Rental.human_attribute_name(:address) %></th>
      <th><%= Rental.human_attribute_name(:age) %></th>
      <th><%= Rental.human_attribute_name(:note) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.name %></td>
        <td><%= number_to_currency(rental.price) %></td>
        <td><%= rental.address %></td>
        <td><%= rental.age %><span><%= t('datetime.prompts.year') %></span></td>
        <td><%= rental.note %></td>
        <td><%= link_to t('application.common.show'), rental %></td>
        <td><%= link_to t('application.common.edit'), edit_rental_path(rental) %></td>
        <td><%= link_to t('application.common.destroy'), rental, method: :delete, data: { confirm: t('.destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

